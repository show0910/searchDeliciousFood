<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/youtube_search_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:text="유튜브 검색"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#1D8B15"
        android:gravity="center"
        android:background="@drawable/youtube_button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#F6F6F6">

        <EditText
            android:id="@+id/eturl"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="검색어 입력"
            android:textColor="#000000"
            android:ems="10"
            android:layout_weight="8" />

        <Button
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:background="#BDBDBD"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="검색"
            android:textColor="#000000"
            android:layout_weight="2" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/searchlist"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F6F6F6"></ListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#F6F6F6">

                <Button
                    android:id="@+id/prevPage"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="이전 페이지"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="10dp" />

                <Button
                    android:id="@+id/nextPage"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="다음 페이지"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="50dp" />
            </LinearLayout>
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabMenu"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fork_knife_floating"
            app:backgroundTint="@color/colorAccent"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="60dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabMenuFirst"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:src="@drawable/map_floating"
            app:backgroundTint="#FFE400"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="60dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabMenuSecond"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:src="@drawable/board_floating"
            app:backgroundTint="#FF0000"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="60dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabMenuThird"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:src="@drawable/search_floating"
            app:backgroundTint="#1DDB16"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="60dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabMenuForth"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:src="@drawable/discount_floating"
            app:backgroundTint="#2478FF"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="60dp" />
    </FrameLayout>
</LinearLayout>